---js
// <script>
const pagination = {
	data: "collections",
	size: 1,
	alias: "tag",
	filter: ["all"],
	// addAllPagesToCollections: true,
};

const eleventyExcludeFromCollections = true;

const eleventyComputed = {
	title: "{{ tag }}",
	permalink: function(data) {
		return `/tag/${this.slugify(data.tag)}/`;
	}
};

---

<div id="filters" class="button-group filters-button-group">  
<a class="button" data-filter=".{{tag}}" href="/blog/">All</a>
{% for tag in collections | getKeys | filterTagList %}
{% set tagUrl %}/tag/{{ tag | slugify }}/{% endset %}
<a class="button {% if page.url == '/tag/{{tag}}' %} active{% endif %}" href="/tag/{{tag}}">{{ tag }}</a>
{% endfor %}
</div>

{% set postslist = collections[ tag ] %}
{%- for post in postslist | reverse %}

<a href="{{ post.url }}" class="postlist-item">
{{ post.data.title }}
</a>
{%- endfor %}