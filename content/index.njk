<article class="notes">
<h4>Notes</h4>
<ul>
{%- for notes in collections.notes -%}
  <li><a href="{{notes.url}}">{{ notes.data.title }}</a></li>
{%- endfor -%}
</ul>
</article>
<article class="projects">
<h4>Projects</h4>
<ul>
