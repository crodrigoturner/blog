<li><a href="/Work" class="{% if page.url == '/Work/' %} active{% endif %}">Work</a></li>
</ul>
</nav>
<main>{{ content | safe }}

</main>
<script type="module" src="{% getBundleFileUrl "js" %}"></script>

<footer>
