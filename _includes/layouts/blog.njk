---
layout: layouts/base.njk
pagination:
  data: collections.post
  size: 5
  alias: post
  reverse: true
---

{%- for post in collections.post -%}
<h3><a href="{{post.url}}">{{ post.data.title }}</a> </h3> {{ post.content | safe }}
<hr/>
{%- endfor %}
{% if pagination.href.previous %}
  <a class="arrow left" href="{{pagination.href.previous}}"><- New</a>
{% endif %}
{% if pagination.href.next %}
  <a class="arrow right" href="{{pagination.href.next}}">Old -></a>
{% endif %}