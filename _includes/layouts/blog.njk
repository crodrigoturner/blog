---
layout: layouts/base.njk
---
<h2>Blog</h2>
<div id="filters" class="button-group">  
<button class="button is-checked" data-filter="*">All</button>
{% for tag in collections | getKeys | filterTagList %}
{% set tagUrl %}/tag/{{ tag | slugify }}/{% endset %}
<button class="button" data-filter="{{tag}}">{{ tag }}</button>
{% endfor %}
</div>

<ul class="col-2 posts">
{% set postslist = collections.posts %}
{%- for post in postslist | reverse %}
<li class="postlist-item" data-filter="{{post.data.category}}">
<a href="{{ post.url }}"> 
<h5>{{ post.data.title }}</h5>
<p class="excerpt">{{post.data.excerpt}}</p>
<p class="meta"><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></p>
</a>
</li>
{%- endfor %}
</ul>

<script>

$(document).ready( function() {   

$('.posts').isotope({
 itemSelector: '.postlist-item',
});

// filter items on button click
$('.button-group').on( 'click', 'button', function() {
  var filterValue = $(this).attr('data-filter');
  $('.posts').isotope({ filter: filterValue });
  $('button').removeClass('active');
  $(this).addClass('active');
});
    })
  
</script>