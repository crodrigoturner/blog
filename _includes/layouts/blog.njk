---
layout: layouts/base.njk
pagination:
  data: collections.posts
  size: 5
  alias: notes
  reverse: true
---

{%- for note in noteslist %}
<h3><a href="{{note.url}}">{{ note.data.title }}</a> </h3> {{ note.content | safe }}
<hr/>
{%- endfor %}
{% if pagination.href.previous %}
  <a class="arrow left" href="{{pagination.href.previous}}"><- New</a>
{% endif %}
{% if pagination.href.next %}
  <a class="arrow right" href="{{pagination.href.next}}">Old -></a>
{% endif %}