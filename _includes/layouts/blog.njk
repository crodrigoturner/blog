---
layout: layouts/base.njk
---
<h2>Blog</h2>
<div id="filters" class="button-group">  <button class="button is-checked" data-filter="*">show all</button>
<span class="tags">
{% for tag in collections | getKeys | filterTagList %}
{% set tagUrl %}/tag/{{ tag | slugify }}/{% endset %}
 <button class="button" data-filter="{{tag}}">{{ tag }}</button>
{% endfor %}
</span>
</div>

{% set postslist = collections.posts %}
{% include "postslist.njk" %}

<script>
// init Isotope
var $grid = $('.posts').isotope({
  itemSelector: '.postlist-item',
  layoutMode: 'fitRows'
});

// change is-checked class on buttons
$('.button-group').each( function( i, buttonGroup ) {
  var $buttonGroup = $( buttonGroup );
  $buttonGroup.on( 'click', 'button', function() {
    $buttonGroup.find('.is-checked').removeClass('is-checked');
    $( this ).addClass('is-checked');
  });
});
  
</script>