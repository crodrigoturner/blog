{%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %}
<ul reversed class="postlist">
{%- for post in postslist | reverse %}
	<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		<a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
{% set checkForTags = tags | tagFilter('post')  %}

      <h3 class="font-bold mr-2 {% if checkForTags == 0 %} hidden {% endif %}" id="tagList">This post is tagged with:</h3>
      <ul class="flex space-x-1">
          {% for tag in checkForTags %}
              <li class="underline tagged eleventyTag">
                  {% set tagUrl %}/tagged/{{ tag | slug }}/{% endset %}
                  <a href="{{ tagUrl | url }}">{{ tag }}</a>
              </li>
          {% endfor %}
      </ul>
	</li>
{%- endfor %}
</ul>